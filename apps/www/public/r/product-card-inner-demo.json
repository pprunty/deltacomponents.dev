      "content": "\"use client\"\n\nimport * as React from \"react\"\n\nimport {\n  ProductCard,\n  ProductCardBadge,\n  ProductCardContent,\n  ProductCardHeader,\n  ProductCardImage,\n  ProductCardMetric,\n  ProductCardSubtitle,\n  ProductCardTitle,\n} from \"@/registry/delta-ui/delta/product-card\"\n\nexport function ProductCardInnerDemo() {\n  const [isWishlisted, setIsWishlisted] = React.useState(false)\n\n  return (\n    <div className=\"w-full max-w-xs\">\n      <ProductCard variant=\"inner\">\n        <ProductCardImage\n          src=\"https://what-i-love-now.vercel.app/_next/image?url=%2Fimages%2Ftwemco-clock.png&w=3840&q=75\"\n          alt=\"Twemco Clock\"\n        >\n          <ProductCardBadge\n            icon=\"âœ¦\"\n            isActive={isWishlisted}\n            onClick={() => setIsWishlisted(!isWishlisted)}\n            aria-label={\n              isWishlisted ? \"Remove from wishlist\" : \"Add to wishlist\"\n            }\n          >\n            Wishlist\n          </ProductCardBadge>\n\n          <ProductCardContent>\n            <ProductCardHeader>\n              <ProductCardTitle>Twemco Clock</ProductCardTitle>\n              <ProductCardSubtitle>Clock</ProductCardSubtitle>\n            </ProductCardHeader>\n            <ProductCardMetric>12</ProductCardMetric>\n          </ProductCardContent>\n        </ProductCardImage>\n      </ProductCard>\n    </div>\n  )\n}\n",
      "type": "registry:example"
    }
