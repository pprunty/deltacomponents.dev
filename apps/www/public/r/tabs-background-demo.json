      "path": "examples/tabs-background-demo.tsx",
      "content": "\"use client\"\n\nimport { Tabs, TabsContent, TabsList, TabsTrigger } from \"@/registry/delta-ui/delta/tabs\"\n\nexport default function TabsBackgroundDemo() {\n  return (\n    <div className=\"w-full max-w-md mx-auto space-y-8\">\n      {/* Background Pills Variant */}\n      <div className=\"space-y-4\">\n        <h3 className=\"text-lg font-medium\">Background Pills</h3>\n        <Tabs defaultValue=\"overview\" className=\"w-full\">\n          <TabsList \n            variant=\"pills\" \n            showActiveIndicator={false}\n            showHoverEffect={true}\n            className=\"grid w-full grid-cols-3 bg-muted/30 rounded-full p-1\"\n          >\n            <TabsTrigger \n              value=\"overview\"\n              className=\"rounded-full transition-all duration-300 data-[state=active]:bg-background data-[state=active]:shadow-sm\"\n            >\n              Overview\n            </TabsTrigger>\n            <TabsTrigger \n              value=\"analytics\"\n              className=\"rounded-full transition-all duration-300 data-[state=active]:bg-background data-[state=active]:shadow-sm\"\n            >\n              Analytics\n            </TabsTrigger>\n            <TabsTrigger \n              value=\"reports\"\n              className=\"rounded-full transition-all duration-300 data-[state=active]:bg-background data-[state=active]:shadow-sm\"\n            >\n              Reports\n            </TabsTrigger>\n          </TabsList>\n          <TabsContent value=\"overview\" className=\"mt-6 p-4 rounded-lg border\">\n            <h4 className=\"font-medium mb-2\">Overview</h4>\n            <p className=\"text-sm text-muted-foreground\">\n              Get a comprehensive view of your application's performance and key metrics.\n            </p>\n          </TabsContent>\n          <TabsContent value=\"analytics\" className=\"mt-6 p-4 rounded-lg border\">\n            <h4 className=\"font-medium mb-2\">Analytics</h4>\n            <p className=\"text-sm text-muted-foreground\">\n              Dive deep into user behavior, traffic patterns, and conversion rates.\n            </p>\n          </TabsContent>\n          <TabsContent value=\"reports\" className=\"mt-6 p-4 rounded-lg border\">\n            <h4 className=\"font-medium mb-2\">Reports</h4>\n            <p className=\"text-sm text-muted-foreground\">\n              Generate detailed reports and export data for further analysis.\n            </p>\n          </TabsContent>\n        </Tabs>\n      </div>\n\n      {/* Custom Background Variant */}\n      <div className=\"space-y-4\">\n        <h3 className=\"text-lg font-medium\">Custom Background</h3>\n        <Tabs defaultValue=\"dashboard\" className=\"w-full\">\n          <TabsList \n            variant=\"default\" \n            showActiveIndicator={false}\n            showHoverEffect={true}\n            className=\"grid w-full grid-cols-3 bg-muted/20 rounded-lg p-1\"\n            hoverIndicatorClassName=\"bg-muted/50 rounded-md\"\n          >\n            <TabsTrigger \n              value=\"dashboard\"\n              className=\"rounded-md transition-all duration-300 data-[state=active]:bg-primary data-[state=active]:text-primary-foreground\"\n            >\n              Dashboard\n            </TabsTrigger>\n            <TabsTrigger \n              value=\"settings\"\n              className=\"rounded-md transition-all duration-300 data-[state=active]:bg-primary data-[state=active]:text-primary-foreground\"\n            >\n              Settings\n            </TabsTrigger>\n            <TabsTrigger \n              value=\"billing\"\n              className=\"rounded-md transition-all duration-300 data-[state=active]:bg-primary data-[state=active]:text-primary-foreground\"\n            >\n              Billing\n            </TabsTrigger>\n          </TabsList>\n          <TabsContent value=\"dashboard\" className=\"mt-6 p-4 rounded-lg border\">\n            <h4 className=\"font-medium mb-2\">Dashboard</h4>\n            <p className=\"text-sm text-muted-foreground\">\n              Monitor your application's health and performance in real-time.\n            </p>\n          </TabsContent>\n          <TabsContent value=\"settings\" className=\"mt-6 p-4 rounded-lg border\">\n            <h4 className=\"font-medium mb-2\">Settings</h4>\n            <p className=\"text-sm text-muted-foreground\">\n              Configure your application preferences and user account settings.\n            </p>\n          </TabsContent>\n          <TabsContent value=\"billing\" className=\"mt-6 p-4 rounded-lg border\">\n            <h4 className=\"font-medium mb-2\">Billing</h4>\n            <p className=\"text-sm text-muted-foreground\">\n              Manage your subscription, view invoices, and update payment methods.\n            </p>\n          </TabsContent>\n        </Tabs>\n      </div>\n    </div>\n  )\n}",
      "type": "registry:example"
    }
  ]
}