{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "modal-no-overlay-close-demo",
  "type": "registry:block",
  "registryDependencies": ["https://deltacomponents.dev/r/modal.json"],
  "files": [
    {
      "path": "registry/examples/modal-no-overlay-close-demo.tsx",
      "content": "\"use client\"\n\nimport React, { useState } from \"react\";\nimport Modal from \"@/registry/components/modal\";\nimport { Button } from \"@/components/ui/button\";\nimport { AlertTriangle, Shield } from \"lucide-react\";\n\nexport default function ModalNoOverlayCloseDemo() {\n  const [showRegular, setShowRegular] = useState(false);\n  const [showSecure, setShowSecure] = useState(false);\n\n  return (\n    <div className=\"flex flex-col sm:flex-row gap-4 items-center justify-center p-4\">\n      <Button onClick={() => setShowRegular(true)} variant=\"outline\">\n        Easy Close Modal\n      </Button>\n      \n      <Button onClick={() => setShowSecure(true)} variant=\"outline\">\n        Secure Modal\n      </Button>\n\n      {/* Regular modal that allows easy closing */}\n      <Modal\n        isOpen={showRegular}\n        onClose={() => setShowRegular(false)}\n        title=\"Easy Close Modal\"\n        subtitle=\"Multiple ways to dismiss this modal\"\n        type=\"overlay\"\n        allowEasyClose={true} // default behavior\n      >\n        <div className=\"space-y-4\">\n          <p className=\"text-muted-foreground\">\n            This modal has <code>allowEasyClose=true</code> (default). \n            You can close it by:\n          </p>\n          <ul className=\"text-sm text-muted-foreground space-y-1 ml-4\">\n            <li>• Clicking the backdrop/overlay</li>\n            <li>• Clicking the X button</li>\n            <li>• Pressing the Escape key</li>\n          </ul>\n          <div className=\"flex gap-2 justify-end\">\n            <Button size=\"sm\" onClick={() => setShowRegular(false)}>\n              Close\n            </Button>\n          </div>\n        </div>\n      </Modal>\n\n      {/* Modal that prevents easy closing */}\n      <Modal\n        isOpen={showSecure}\n        onClose={() => setShowSecure(false)}\n        title=\"Secure Action Required\"\n        type=\"overlay\"\n        allowEasyClose={false} // prevents easy dismissal\n      >\n        <div className=\"space-y-4\">\n          <div className=\"flex items-start gap-3\">\n            <div className=\"rounded-full bg-amber-100 dark:bg-amber-900/20 p-2\">\n              <AlertTriangle className=\"h-5 w-5 text-amber-600 dark:text-amber-400\" />\n            </div>\n            <div className=\"space-y-2\">\n              <p className=\"text-muted-foreground\">\n                This modal has <code>allowEasyClose=false</code>. \n                Neither backdrop clicks nor ESC key will close it - you must use the action buttons.\n              </p>\n              <div className=\"rounded-lg bg-muted p-3\">\n                <div className=\"flex items-center gap-2 text-sm\">\n                  <Shield className=\"h-4 w-4\" />\n                  <span className=\"font-medium\">Prevents Accidental Dismissal</span>\n                </div>\n                <p className=\"text-sm text-muted-foreground mt-1\">\n                  Perfect for critical actions that require explicit confirmation.\n                </p>\n              </div>\n            </div>\n          </div>\n          <div className=\"flex gap-2 pt-2 justify-end\">\n            <Button \n              size=\"sm\" \n              variant=\"outline\" \n              onClick={() => setShowSecure(false)}\n            >\n              Cancel\n            </Button>\n            <Button size=\"sm\">\n              Confirm Action\n            </Button>\n          </div>\n        </div>\n      </Modal>\n    </div>\n  );\n}\n",
      "type": "registry:block"
    }
  ]
}
