{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "modal-custom-header-demo",
  "type": "registry:block",
  "registryDependencies": ["https://deltacomponents.dev/r/modal.json"],
  "files": [
    {
      "path": "registry/examples/modal-custom-header-demo.tsx",
      "content": "\"use client\"\n\nimport React, { useState } from \"react\";\nimport Modal from \"@/registry/components/modal\";\nimport { Button } from \"@/components/ui/button\";\nimport { Badge } from \"@/components/ui/badge\";\nimport { Star, Clock } from \"lucide-react\";\n\nexport default function ModalCustomHeaderDemo() {\n  const [showBuiltIn, setShowBuiltIn] = useState(false);\n  const [showCustom, setShowCustom] = useState(false);\n\n  return (\n    <div className=\"flex flex-col sm:flex-row gap-4 items-center justify-center p-4\">\n      <Button onClick={() => setShowBuiltIn(true)} variant=\"outline\">\n        Built-in Title/Subtitle\n      </Button>\n      \n      <Button onClick={() => setShowCustom(true)} variant=\"outline\">\n        Custom Header Content\n      </Button>\n\n      {/* Modal with built-in title and subtitle */}\n      <Modal\n        isOpen={showBuiltIn}\n        onClose={() => setShowBuiltIn(false)}\n        title=\"Account Settings\"\n        subtitle=\"Manage your account preferences and security settings\"\n        type=\"overlay\"\n      >\n        <div className=\"space-y-4\">\n          <p className=\"text-muted-foreground\">\n            This modal uses the built-in <code>title</code> and <code>subtitle</code> props \n            for a clean, consistent header layout.\n          </p>\n          <div className=\"flex gap-2 justify-end\">\n            <Button size=\"sm\" variant=\"outline\" onClick={() => setShowBuiltIn(false)}>\n              Cancel\n            </Button>\n            <Button size=\"sm\">Save Changes</Button>\n          </div>\n        </div>\n      </Modal>\n\n      {/* Modal with custom header content */}\n      <Modal\n        isOpen={showCustom}\n        onClose={() => setShowCustom(false)}\n        type=\"overlay\"\n        disablePadding={true}\n      >\n        {/* Custom header with complex layout */}\n        <div className=\"p-6 border-b border-border\">\n          <div className=\"flex items-start justify-between\">\n            <div className=\"space-y-2\">\n              <div className=\"flex items-center gap-2\">\n                <Star className=\"h-5 w-5 text-yellow-500\" />\n                <h2 className=\"text-xl font-semibold\">Premium Feature</h2>\n                <Badge variant=\"secondary\">Pro</Badge>\n              </div>\n              <p className=\"text-sm text-muted-foreground\">\n                Unlock advanced analytics and reporting\n              </p>\n              <div className=\"flex items-center gap-1 text-xs text-muted-foreground\">\n                <Clock className=\"h-3 w-3\" />\n                Limited time offer\n              </div>\n            </div>\n          </div>\n        </div>\n        \n        {/* Custom content area */}\n        <div className=\"p-6 space-y-4\">\n          <p className=\"text-muted-foreground\">\n            This modal uses custom header content with <code>disablePadding=true</code> \n            for complete control over the layout, including icons, badges, and complex arrangements.\n          </p>\n          <div className=\"flex gap-2 justify-end\">\n            <Button size=\"sm\" variant=\"outline\" onClick={() => setShowCustom(false)}>\n              Maybe Later\n            </Button>\n            <Button size=\"sm\">Upgrade Now</Button>\n          </div>\n        </div>\n      </Modal>\n    </div>\n  );\n}\n",
      "type": "registry:block"
    }
  ]
}
