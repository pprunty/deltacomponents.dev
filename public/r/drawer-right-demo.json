{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "drawer-right-demo",
  "type": "registry:block",
  "registryDependencies": ["https://deltacomponents.dev/r/drawer.json"],
  "files": [
    {
      "path": "registry/examples/drawer-right-demo.tsx",
      "content": "\"use client\"\n\nimport React from \"react\";\nimport { Button } from \"@/components/ui/button\"\nimport {\n  Drawer,\n  DrawerBody,\n  DrawerClose,\n  DrawerContent,\n  DrawerDescription,\n  DrawerFooter,\n  DrawerHeader,\n  DrawerOverlay,\n  DrawerPortal,\n  DrawerTitle,\n  DrawerTrigger,\n} from \"@/registry/components/drawer\";\n\nexport default function DrawerRightDemo() {\n  return (\n    <div className=\"flex flex-col items-center\">\n      <Drawer direction=\"right\">\n        <DrawerTrigger asChild>\n          <Button>Open Right Drawer</Button>\n        </DrawerTrigger>\n        <DrawerPortal>\n          <DrawerOverlay />\n          <DrawerContent\n            className=\"bg-background flex flex-col rounded-xl fixed inset-y-4 right-4 h-[calc(100vh-32px)] w-3/4 sm:max-w-sm z-50 border p-4 hide-vaul-after\"\n            initialTransform=\"calc(100% + 8px)\"\n          >\n            <DrawerHeader>\n              <DrawerTitle>Right Side Drawer</DrawerTitle>\n              <DrawerDescription>\n                This drawer slides in from the right side of the screen.\n              </DrawerDescription>\n            </DrawerHeader>\n            <DrawerBody className=\"overflow-y-auto p-4\">\n              <div className=\"space-y-4\">\n                <p className=\"text-muted-foreground\">\n                  Right side drawers are perfect for:\n                </p>\n                <ul className=\"text-sm text-muted-foreground space-y-2\">\n                  <li>• Navigation menus</li>\n                  <li>• Settings panels</li>\n                  <li>• User profiles</li>\n                  <li>• Shopping carts</li>\n                  <li>• Filters and options</li>\n                </ul>\n                <div className=\"mt-6 p-4 bg-muted rounded-lg\">\n                  <h4 className=\"font-medium mb-2\">Configuration</h4>\n                  <p className=\"text-sm text-muted-foreground\">\n                    Use <code className=\"bg-background px-1 rounded\">direction=\"right\"</code> and \n                    <code className=\"bg-background px-1 rounded ml-1\">initialTransform=\"calc(100% + 8px)\"</code> \n                    to create a right-sliding drawer.\n                  </p>\n                </div>\n              </div>\n            </DrawerBody>\n            <DrawerFooter>\n              <DrawerClose asChild>\n                <Button variant=\"outline\" className=\"w-full\">Close</Button>\n              </DrawerClose>\n            </DrawerFooter>\n          </DrawerContent>\n        </DrawerPortal>\n      </Drawer>\n    </div>\n  );\n}\n",
      "type": "registry:block"
    }
  ]
}
