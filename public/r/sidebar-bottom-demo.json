{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "sidebar-bottom-demo",
  "type": "registry:block",
  "author": "patrick prunty <https://www.patrickprunty.com>",
  "registryDependencies": [
    "https://deltacomponents.dev/r/sidebar.json",
    "https://deltacomponents.dev/r/dropdown-menu.json"
  ],
  "files": [
    {
      "path": "registry/examples/sidebar-bottom-demo.tsx",
      "content": "\"use client\"\n\nimport { Bookmark, House, MagnifyingGlass, Plus } from \"@phosphor-icons/react\"\nimport { CreditCard, Crown, LogOut, Settings, UserCircle } from \"lucide-react\"\n\nimport {\n  Dropdown,\n  DropdownContent,\n  DropdownItem,\n  DropdownSeparator,\n  DropdownTrigger,\n} from \"@/delta/dropdown-menu\"\nimport Sidebar from \"@/delta/sidebar\"\n\nexport default function SidebarBottomDemo() {\n  const routes = [\n    { href: \"/docs/layout/sidebar#home\", label: \"Home\", icon: House },\n    {\n      href: \"/docs/layout/sidebar#search\",\n      label: \"Search\",\n      icon: MagnifyingGlass,\n    },\n    { href: \"/docs/layout/sidebar#create\", label: \"Create\", icon: Plus },\n    {\n      href: \"/docs/layout/sidebar#bookmarks\",\n      label: \"Bookmarks\",\n      icon: Bookmark,\n    },\n    // Note: Profile icon excluded since we have profile dropdown in bottom\n  ]\n\n  return (\n    <div className=\"relative h-96 w-full border rounded-lg overflow-hidden bg-background\">\n      <Sidebar routes={routes}>\n        {/* User profile dropdown in bottom section */}\n        <Dropdown>\n          <DropdownTrigger className=\"cursor-pointer p-3 w-full rounded-lg hover:bg-accent transition-colors\">\n            <div className=\"flex items-center gap-3\">\n              <img\n                src=\"https://patrickprunty.com/icon.webp\"\n                alt=\"User avatar\"\n                className=\"h-8 w-8 rounded-full border border-border\"\n              />\n              <div className=\"flex flex-col text-left\">\n                <span className=\"text-sm font-medium text-foreground\">\n                  Patrick\n                </span>\n                <span className=\"text-xs text-muted-foreground\">Pro Plan</span>\n              </div>\n            </div>\n          </DropdownTrigger>\n\n          <DropdownContent align=\"end\" side=\"right\" className=\"w-64\">\n            {/* Profile Section */}\n            <div className=\"flex items-center gap-3 p-3\">\n              <img\n                src=\"https://patrickprunty.com/icon.webp\"\n                alt=\"User avatar\"\n                className=\"h-10 w-10 rounded-full\"\n              />\n              <div className=\"flex flex-col gap-1\">\n                <p className=\"text-sm font-medium text-foreground\">\n                  patrick@example.com\n                </p>\n                <div className=\"flex items-center gap-1\">\n                  <Crown className=\"h-3 w-3 text-amber-500\" />\n                  <p className=\"text-xs text-muted-foreground\">Pro Plan</p>\n                </div>\n              </div>\n            </div>\n            <DropdownSeparator />\n\n            {/* Menu Items */}\n            <DropdownItem className=\"gap-2\">\n              <UserCircle className=\"h-4 w-4\" />\n              Profile\n            </DropdownItem>\n            <DropdownItem className=\"gap-2\">\n              <CreditCard className=\"h-4 w-4\" />\n              Billing\n            </DropdownItem>\n            <DropdownItem className=\"gap-2\">\n              <Settings className=\"h-4 w-4\" />\n              Settings\n            </DropdownItem>\n            <DropdownSeparator />\n            <DropdownItem className=\"gap-2\" destructive>\n              <LogOut className=\"h-4 w-4\" />\n              Log out\n            </DropdownItem>\n          </DropdownContent>\n        </Dropdown>\n      </Sidebar>\n\n      {/* Demo content area */}\n      <div className=\"ml-64 p-6 h-full\">\n        <div className=\"space-y-4\">\n          <h3 className=\"text-lg font-semibold text-foreground\">\n            Sidebar with Custom Bottom Section\n          </h3>\n          <p className=\"text-muted-foreground\">\n            This demo shows how to use the sidebar's bottom section to render\n            custom content like a user profile dropdown.\n          </p>\n          <div className=\"space-y-2 text-sm text-muted-foreground\">\n            <p>• Bottom section renders children in the footer area</p>\n            <p>\n              • Profile dropdown uses the same component as the dropdown menu\n              demos\n            </p>\n            <p>• Dropdown opens to the right side to avoid overflow</p>\n            <p>• Perfect for user profiles, settings, or quick actions</p>\n          </div>\n        </div>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:block",
      "target": "/components/delta/examples/sidebar-bottom-demo.tsx"
    }
  ]
}
