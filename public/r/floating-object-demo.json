  "files": [
    {
      "path": "registry/examples/floating-object-demo.tsx",
      "content": "\"use client\"\n\nimport { FloatingObject } from \"@/registry/animations/floating-object\"\n\nexport default function FloatingObjectDemo() {\n  return (\n    <div className=\"w-full bg-background p-8\">\n      <div className=\"mx-auto max-w-2xl\">\n        {/* Main floating image showcase */}\n        <div className=\"relative h-80 bg-gradient-to-br from-primary/5 to-secondary/5 border border-border rounded-xl overflow-hidden\">\n          <FloatingObject\n            pattern=\"float\"\n            intensity=\"medium\"\n            speed=\"medium\"\n            className=\"absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2\"\n          >\n            <div className=\"relative\">\n              <img\n                src=\"/images/pp.png\"\n                alt=\"Floating demonstration\"\n                className=\"w-24 h-24 object-cover rounded-full border-4 border-primary/20 shadow-lg bg-card\"\n                style={{ aspectRatio: '1/1' }}\n              />\n              <div className=\"absolute -top-1 -right-1 w-4 h-4 bg-primary rounded-full animate-pulse shadow-sm\" />\n            </div>\n          </FloatingObject>\n        </div>\n        \n        <div className=\"mt-6 text-center\">\n          <p className=\"text-sm text-muted-foreground\">\n            Gentle floating animation with subtle movement and rotation\n          </p>\n        </div>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:block"
    }
  ]
}
