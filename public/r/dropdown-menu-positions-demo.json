      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport {\n  CreditCard,\n  Crown,\n  LogOut,\n  Settings,\n  User,\n  UserCircle,\n} from \"lucide-react\"\n\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuTrigger,\n} from \"@/delta/dropdown-menu\"\n\nexport default function DropdownMenuPositionsDemo() {\n  return (\n    <div className=\"relative h-[500px] w-full border rounded-lg p-4 bg-gradient-to-br from-muted/20 to-muted/40\">\n      {/* Center Instructions */}\n      <div className=\"flex items-center justify-center h-full\">\n        <div className=\"text-center space-y-2\">\n          <p className=\"text-lg font-medium text-foreground\">\n            Positioning Demo\n          </p>\n          <p className=\"text-sm text-muted-foreground\">\n            Click the avatars to see different alignments\n          </p>\n          <p className=\"text-xs text-muted-foreground\">\n            Top-left aligns start â€¢ Bottom-right aligns end\n          </p>\n        </div>\n      </div>\n\n      {/* Top-left avatar */}\n      <div className=\"absolute top-4 left-4\">\n        <DropdownMenu>\n          <DropdownMenuTrigger asChild>\n            <img\n              src=\"https://patrickprunty.com/icon.webp\"\n              alt=\"User avatar\"\n              className=\"h-10 w-10 rounded-full border-2 border-border hover:border-primary transition-colors cursor-pointer\"\n            />\n          </DropdownMenuTrigger>\n          <DropdownMenuContent side=\"bottom\" align=\"start\" className=\"w-64\">\n            {/* Profile Section */}\n            <div className=\"flex items-center gap-3 p-3\">\n              <img\n                src=\"https://patrickprunty.com/icon.webp\"\n                alt=\"User avatar\"\n                className=\"h-10 w-10 rounded-full\"\n              />\n              <div className=\"flex flex-col gap-1\">\n                <p className=\"text-sm font-medium text-foreground\">\n                  patrick@example.com\n                </p>\n                <div className=\"flex items-center gap-1\">\n                  <Crown className=\"h-3 w-3 text-amber-500\" />\n                  <p className=\"text-xs text-muted-foreground\">Pro Plan</p>\n                </div>\n              </div>\n            </div>\n            <DropdownMenuSeparator />\n\n            {/* Menu Items */}\n            <DropdownMenuItem>\n              <UserCircle className=\"h-4 w-4 mr-2\" />\n              Profile\n            </DropdownMenuItem>\n            <DropdownMenuItem>\n              <CreditCard className=\"h-4 w-4 mr-2\" />\n              Billing\n            </DropdownMenuItem>\n            <DropdownMenuItem>\n              <Settings className=\"h-4 w-4 mr-2\" />\n              Settings\n            </DropdownMenuItem>\n            <DropdownMenuSeparator />\n            <DropdownMenuItem className=\"text-destructive focus:text-destructive focus:bg-destructive/10\">\n              <LogOut className=\"h-4 w-4 mr-2\" />\n              Log out\n            </DropdownMenuItem>\n          </DropdownMenuContent>\n        </DropdownMenu>\n      </div>\n\n      {/* Bottom-right avatar */}\n      <div className=\"absolute bottom-4 right-4\">\n        <DropdownMenu>\n          <DropdownMenuTrigger asChild>\n            <img\n              src=\"https://patrickprunty.com/icon.webp\"\n              alt=\"User avatar\"\n              className=\"h-10 w-10 rounded-full border-2 border-border hover:border-primary transition-colors cursor-pointer\"\n            />\n          </DropdownMenuTrigger>\n          <DropdownMenuContent side=\"top\" align=\"end\" className=\"w-64\">\n            {/* Profile Section */}\n            <div className=\"flex items-center gap-3 p-3\">\n              <img\n                src=\"https://patrickprunty.com/icon.webp\"\n                alt=\"User avatar\"\n                className=\"h-10 w-10 rounded-full\"\n              />\n              <div className=\"flex flex-col gap-1\">\n                <p className=\"text-sm font-medium text-foreground\">\n                  patrick@example.com\n                </p>\n                <div className=\"flex items-center gap-1\">\n                  <Crown className=\"h-3 w-3 text-amber-500\" />\n                  <p className=\"text-xs text-muted-foreground\">Pro Plan</p>\n                </div>\n              </div>\n            </div>\n            <DropdownMenuSeparator />\n\n            {/* Menu Items */}\n            <DropdownMenuItem>\n              <UserCircle className=\"h-4 w-4 mr-2\" />\n              Profile\n            </DropdownMenuItem>\n            <DropdownMenuItem>\n              <CreditCard className=\"h-4 w-4 mr-2\" />\n              Billing\n            </DropdownMenuItem>\n            <DropdownMenuItem>\n              <Settings className=\"h-4 w-4 mr-2\" />\n              Settings\n            </DropdownMenuItem>\n            <DropdownMenuSeparator />\n            <DropdownMenuItem className=\"text-destructive focus:text-destructive focus:bg-destructive/10\">\n              <LogOut className=\"h-4 w-4 mr-2\" />\n              Log out\n            </DropdownMenuItem>\n          </DropdownMenuContent>\n        </DropdownMenu>\n      </div>\n    </div>\n  )\n}\n",
