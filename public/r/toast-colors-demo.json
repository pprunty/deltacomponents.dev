{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "toast-colors-demo",
  "type": "registry:block",
  "author": "patrick prunty <https://www.patrickprunty.com>",
  "registryDependencies": ["https://deltacomponents.dev/r/toast.json"],
  "files": [
    {
      "path": "registry/examples/toast-colors-demo.tsx",
      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport { useTheme } from \"next-themes\"\nimport { Toaster } from \"sonner\"\n\nimport { Button } from \"@/components/ui/button\"\nimport { toast } from \"@/registry/components/toast\"\n\nexport default function ToastColorsDemo() {\n  const { theme, setTheme } = useTheme()\n\n  return (\n    <div className=\"space-y-4\">\n      <Toaster\n        position=\"bottom-right\"\n        richColors\n        toastOptions={{\n          className:\n            \"group toast border rounded-lg p-4 shadow-md bg-background text-foreground\",\n        }}\n      />\n\n      <div className=\"flex items-center gap-2 mb-4\">\n        <Button\n          variant=\"outline\"\n          size=\"sm\"\n          onClick={() => setTheme(theme === \"dark\" ? \"light\" : \"dark\")}\n        >\n          Toggle Theme\n        </Button>\n        <span className=\"text-sm text-muted-foreground\">Current: {theme}</span>\n      </div>\n      <div className=\"grid grid-cols-2 gap-2\">\n        <Button\n          onClick={() => toast.success(\"Emerald success colors\")}\n          className=\"bg-emerald-600 hover:bg-emerald-700\"\n        >\n          Success Toast\n        </Button>\n        <Button\n          onClick={() => toast.error(\"Red error colors\")}\n          className=\"bg-red-600 hover:bg-red-700\"\n        >\n          Error Toast\n        </Button>\n        <Button\n          onClick={() => toast.warning(\"Amber warning colors\")}\n          className=\"bg-amber-600 hover:bg-amber-700\"\n        >\n          Warning Toast\n        </Button>\n        <Button\n          onClick={() => toast.info(\"Blue info colors\")}\n          className=\"bg-blue-600 hover:bg-blue-700\"\n        >\n          Info Toast\n        </Button>\n        <Button\n          onClick={() => toast.default(\"Gray default colors\")}\n          className=\"bg-gray-600 hover:bg-gray-700\"\n        >\n          Default Toast\n        </Button>\n        <Button\n          onClick={() => {\n            toast.success(\"Light theme colors\")\n            setTimeout(() => {\n              setTheme(\"dark\")\n              toast.success(\"Dark theme colors\")\n            }, 1000)\n          }}\n          variant=\"outline\"\n        >\n          Theme Transition\n        </Button>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:block",
      "target": "/components/delta/examples/toast-colors-demo.tsx"
    }
  ]
}
