{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "drawer-left-demo",
  "type": "registry:block",
  "registryDependencies": ["https://deltacomponents.dev/r/drawer.json"],
  "files": [
    {
      "path": "registry/examples/drawer-left-demo.tsx",
      "content": "\"use client\"\n\nimport React from \"react\";\nimport { Button } from \"@/components/ui/button\"\nimport {\n  Drawer,\n  DrawerBody,\n  DrawerClose,\n  DrawerContent,\n  DrawerDescription,\n  DrawerFooter,\n  DrawerHeader,\n  DrawerOverlay,\n  DrawerPortal,\n  DrawerTitle,\n  DrawerTrigger,\n} from \"@/registry/components/drawer\";\n\nexport default function DrawerLeftDemo() {\n  return (\n    <div className=\"flex flex-col items-center\">\n      <Drawer direction=\"left\">\n        <DrawerTrigger asChild>\n          <Button>Open Left Drawer</Button>\n        </DrawerTrigger>\n        <DrawerPortal>\n          <DrawerOverlay />\n          <DrawerContent\n            className=\"bg-background flex flex-col rounded-xl fixed inset-y-4 left-4 h-[calc(100vh-32px)] w-3/4 sm:max-w-sm z-50 border p-4 hide-vaul-after\"\n            initialTransform=\"calc(-100% - 8px)\"\n          >\n            <DrawerHeader>\n              <DrawerTitle>Left Side Drawer</DrawerTitle>\n              <DrawerDescription>\n                This drawer slides in from the left side of the screen.\n              </DrawerDescription>\n            </DrawerHeader>\n            <DrawerBody className=\"overflow-y-auto p-4\">\n              <div className=\"space-y-4\">\n                <p className=\"text-muted-foreground\">\n                  Left side drawers are commonly used for:\n                </p>\n                <ul className=\"text-sm text-muted-foreground space-y-2\">\n                  <li>• Main navigation menus</li>\n                  <li>• Sidebar content</li>\n                  <li>• Category filters</li>\n                  <li>• Table of contents</li>\n                  <li>• Secondary actions</li>\n                </ul>\n                \n                <div className=\"mt-6 space-y-3\">\n                  <div className=\"p-3 bg-muted rounded-lg\">\n                    <h5 className=\"font-medium text-sm\">Menu Item 1</h5>\n                    <p className=\"text-xs text-muted-foreground\">Example navigation item</p>\n                  </div>\n                  <div className=\"p-3 bg-muted rounded-lg\">\n                    <h5 className=\"font-medium text-sm\">Menu Item 2</h5>\n                    <p className=\"text-xs text-muted-foreground\">Another navigation option</p>\n                  </div>\n                  <div className=\"p-3 bg-muted rounded-lg\">\n                    <h5 className=\"font-medium text-sm\">Menu Item 3</h5>\n                    <p className=\"text-xs text-muted-foreground\">Additional content</p>\n                  </div>\n                </div>\n                \n                <div className=\"mt-6 p-4 bg-muted rounded-lg\">\n                  <h4 className=\"font-medium mb-2\">Configuration</h4>\n                  <p className=\"text-sm text-muted-foreground\">\n                    Use <code className=\"bg-background px-1 rounded\">direction=\"left\"</code> and \n                    <code className=\"bg-background px-1 rounded ml-1\">initialTransform=\"calc(-100% - 8px)\"</code> \n                    to create a left-sliding drawer.\n                  </p>\n                </div>\n              </div>\n            </DrawerBody>\n            <DrawerFooter>\n              <DrawerClose asChild>\n                <Button variant=\"outline\" className=\"w-full\">Close</Button>\n              </DrawerClose>\n            </DrawerFooter>\n          </DrawerContent>\n        </DrawerPortal>\n      </Drawer>\n    </div>\n  );\n}\n",
      "type": "registry:block"
    }
  ]
}
