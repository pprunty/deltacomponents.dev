  "files": [
    {
      "path": "registry/examples/modal-minimal-demo.tsx",
      "content": "\"use client\"\n\nimport React, { useState } from \"react\"\nimport Modal from \"@/delta/modal\"\nimport { Calendar, MessageCircle, User } from \"lucide-react\"\n\nimport { Button } from \"@/components/ui/button\"\n\nexport default function ModalMinimalDemo() {\n  const [isOpen, setIsOpen] = useState(false)\n\n  return (\n    <div className=\"flex flex-col items-center justify-center space-y-8\">\n      {/* Trigger Button */}\n      <Button onClick={() => setIsOpen(true)} className=\"w-40\">\n        Open Minimal Modal\n      </Button>\n\n      {/* Minimal Modal - No title, no close button */}\n      <Modal\n        isOpen={isOpen}\n        onClose={() => setIsOpen(false)}\n        showCloseButton={false}\n        animationType=\"scale\"\n        disablePadding={false}\n      >\n        <div className=\"space-y-6\">\n          {/* Clean Content */}\n          <div className=\"text-center space-y-3\">\n            <div className=\"w-16 h-16 mx-auto bg-primary/10 rounded-full flex items-center justify-center\">\n              <MessageCircle className=\"w-8 h-8 text-primary\" />\n            </div>\n            <h3 className=\"text-xl font-semibold\">Quick Update</h3>\n            <p className=\"text-muted-foreground max-w-sm\">\n              Your settings have been successfully updated. You can now enjoy\n              the new features.\n            </p>\n          </div>\n\n          {/* Information Cards */}\n          <div className=\"space-y-3\">\n            <div className=\"flex items-center space-x-3 p-3 bg-muted/50 rounded-lg\">\n              <User className=\"w-5 h-5 text-muted-foreground\" />\n              <div>\n                <p className=\"text-sm font-medium\">Profile Updated</p>\n                <p className=\"text-xs text-muted-foreground\">\n                  Changes saved automatically\n                </p>\n              </div>\n            </div>\n            <div className=\"flex items-center space-x-3 p-3 bg-muted/50 rounded-lg\">\n              <Calendar className=\"w-5 h-5 text-muted-foreground\" />\n              <div>\n                <p className=\"text-sm font-medium\">Next Sync</p>\n                <p className=\"text-xs text-muted-foreground\">\n                  Scheduled for tomorrow\n                </p>\n              </div>\n            </div>\n          </div>\n\n          {/* Action Buttons */}\n          <div className=\"flex space-x-2\">\n            <Button\n              onClick={() => setIsOpen(false)}\n              variant=\"outline\"\n              className=\"flex-1\"\n            >\n              Maybe Later\n            </Button>\n            <Button onClick={() => setIsOpen(false)} className=\"flex-1\">\n              Got it\n            </Button>\n          </div>\n        </div>\n      </Modal>\n    </div>\n  )\n}\n",
      "type": "registry:block",
      "target": "/components/delta/modal-minimal-demo.tsx"
    }
  ]
}