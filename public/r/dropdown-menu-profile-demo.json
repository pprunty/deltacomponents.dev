      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport {\n  CreditCard,\n  Crown,\n  LogOut,\n  Settings,\n  User,\n  UserCircle,\n} from \"lucide-react\"\n\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuTrigger,\n} from \"@/components/delta/dropdown-menu\"\n\nexport default function DropdownMenuProfileDemo() {\n  return (\n    <div className=\"flex items-center justify-center min-h-[600px] p-8\">\n      <DropdownMenu>\n        <DropdownMenuTrigger asChild>\n          <img\n            src=\"https://patrickprunty.com/icon.webp\"\n            alt=\"User avatar\"\n            className=\"h-10 w-10 rounded-full border-2 border-border hover:border-primary transition-colors cursor-pointer\"\n          />\n        </DropdownMenuTrigger>\n        <DropdownMenuContent align=\"end\" className=\"w-64\">\n          {/* Profile Section */}\n          <div className=\"flex items-center gap-3 p-3\">\n            <img\n              src=\"https://patrickprunty.com/icon.webp\"\n              alt=\"User avatar\"\n              className=\"h-10 w-10 rounded-full\"\n            />\n            <div className=\"flex flex-col gap-1\">\n              <p className=\"text-sm font-medium text-foreground\">\n                patrick@example.com\n              </p>\n              <div className=\"flex items-center gap-1\">\n                <Crown className=\"h-3 w-3 text-amber-500\" />\n                <p className=\"text-xs text-muted-foreground\">Pro Plan</p>\n              </div>\n            </div>\n          </div>\n          <DropdownMenuSeparator />\n\n          {/* Menu Items */}\n          <DropdownMenuItem>\n            <UserCircle className=\"h-4 w-4 mr-2\" />\n            Profile\n          </DropdownMenuItem>\n          <DropdownMenuItem>\n            <CreditCard className=\"h-4 w-4 mr-2\" />\n            Billing\n          </DropdownMenuItem>\n          <DropdownMenuItem>\n            <Settings className=\"h-4 w-4 mr-2\" />\n            Settings\n          </DropdownMenuItem>\n          <DropdownMenuSeparator />\n          <DropdownMenuItem className=\"text-destructive focus:text-destructive focus:bg-destructive/10\">\n            <LogOut className=\"h-4 w-4 mr-2\" />\n            Log out\n          </DropdownMenuItem>\n        </DropdownMenuContent>\n      </DropdownMenu>\n    </div>\n  )\n}\n",
      "type": "registry:block",
      "target": "components/delta/dropdown-menu-profile-demo.tsx"
    }
  ]
