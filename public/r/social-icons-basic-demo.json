      "content": "\"use client\"\n\nimport React from \"react\";\nimport { SocialIcon, SocialIcons } from \"@/registry/components/social-icons\";\n\nexport default function SocialIconsBasicDemo() {\n  const socialLinks = [\n    { platform: \"x\" as const, href: \"https://x.com/yourhandle\" },\n    { platform: \"linkedin\" as const, href: \"https://linkedin.com/in/yourprofile\" },\n    { platform: \"instagram\" as const, href: \"https://instagram.com/yourhandle\" },\n    { platform: \"tiktok\" as const, href: \"https://tiktok.com/@yourhandle\" }\n  ];\n\n  return (\n    <div className=\"w-full max-w-4xl mx-auto space-y-8 p-4\">\n      <div className=\"space-y-4\">\n        <h3 className=\"text-xl font-semibold\">Individual Social Icons</h3>\n        \n        <div className=\"space-y-4\">\n          <div className=\"space-y-2\">\n            <h4 className=\"text-sm font-medium text-muted-foreground\">Color Variants</h4>\n            <div className=\"flex items-center gap-4\">\n              <SocialIcon platform=\"x\" variant=\"color\" size={32} />\n              <SocialIcon platform=\"linkedin\" variant=\"color\" size={32} />\n              <SocialIcon platform=\"instagram\" variant=\"color\" size={32} />\n              <SocialIcon platform=\"tiktok\" variant=\"color\" size={32} />\n            </div>\n          </div>\n          \n          <div className=\"space-y-2\">\n            <h4 className=\"text-sm font-medium text-muted-foreground\">Monochrome (Theme Reactive)</h4>\n            <div className=\"flex items-center gap-4\">\n              <SocialIcon platform=\"x\" variant=\"monochrome\" size={32} />\n              <SocialIcon platform=\"linkedin\" variant=\"monochrome\" size={32} />\n              <SocialIcon platform=\"instagram\" variant=\"monochrome\" size={32} />\n              <SocialIcon platform=\"tiktok\" variant=\"monochrome\" size={32} />\n            </div>\n          </div>\n        </div>\n      </div>\n\n      <div className=\"space-y-4\">\n        <h3 className=\"text-xl font-semibold\">Social Icons Groups</h3>\n        \n        <div className=\"space-y-4\">\n          <div className=\"space-y-2\">\n            <h4 className=\"text-sm font-medium text-muted-foreground\">Default (Color)</h4>\n            <SocialIcons \n              icons={socialLinks}\n              variant=\"color\"\n              size={28}\n              gap={12}\n            />\n          </div>\n          \n          <div className=\"space-y-2\">\n            <h4 className=\"text-sm font-medium text-muted-foreground\">Monochrome</h4>\n            <SocialIcons \n              icons={socialLinks}\n              variant=\"monochrome\"\n              size={28}\n              gap={12}\n            />\n          </div>\n          \n          <div className=\"space-y-2\">\n            <h4 className=\"text-sm font-medium text-muted-foreground\">Large Size with More Gap</h4>\n            <SocialIcons \n              icons={socialLinks}\n              variant=\"color\"\n              size={40}\n              gap={20}\n            />\n          </div>\n          \n          <div className=\"space-y-2\">\n            <h4 className=\"text-sm font-medium text-muted-foreground\">Small Footer Style</h4>\n            <SocialIcons \n              icons={socialLinks}\n              variant=\"monochrome\"\n              size={20}\n              gap={8}\n            />\n          </div>\n        </div>\n      </div>\n\n      <div className=\"space-y-4\">\n        <h3 className=\"text-xl font-semibold\">Usage Examples</h3>\n        \n        <div className=\"space-y-4\">\n          <div className=\"p-4 bg-muted/50 rounded-lg\">\n            <h4 className=\"text-sm font-medium mb-2\">Footer Example</h4>\n            <div className=\"flex flex-col sm:flex-row justify-between items-center gap-4\">\n              <p className=\"text-sm text-muted-foreground\">Â© 2024 Your Company. All rights reserved.</p>\n              <SocialIcons \n                icons={socialLinks}\n                variant=\"monochrome\"\n                size={20}\n                gap={12}\n              />\n            </div>\n          </div>\n          \n          <div className=\"p-4 border rounded-lg\">\n            <h4 className=\"text-sm font-medium mb-2\">Contact Section</h4>\n            <div className=\"text-center space-y-3\">\n              <p className=\"text-muted-foreground\">Follow us on social media</p>\n              <SocialIcons \n                icons={socialLinks}\n                variant=\"color\"\n                size={36}\n                gap={16}\n                className=\"justify-center\"\n              />\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  );\n}\n",
      "type": "registry:block",
      "target": "/components/delta/examples/social-icons-basic-demo.tsx"
    }
  ]
